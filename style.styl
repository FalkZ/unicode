black = #011936
blue = rgba(#1E9AB0, .8)

*
  color black
  font-family Noto Sans, sans-serif
  font-smooth always
  -webkit-font-smoothing antialiased

html, body
  margin 0
  width 100vw

body
  overflow-x hidden
  padding 8px
  padding-bottom 80vh

head
  display none

header
  position fixed
  top 8px
  right 8px
  left 8px
  z-index 2
  display table-row
  margin 0
  padding 8px 25px
 
  background blue

#logo
  display table
  margin 0
  padding-right 25px
  text-align center
  font-size 20px
  line-height 1em

  #box
    display block
    border-radius .2em
    background black
    color white
    line-height 1em

&>*
  display table-cell
  justify-content right
  vertical-align middle

#nav
  padding 0
  line-height 1em

  a
    position relative
    display inline-block
    margin 0 .3em
    padding .3em .5em
    padding-right .7em
    height 1
    text-decoration none
    letter-spacing .15em
    font-weight bold
    font-size 13px
    line-height 1em
    cursor pointer
    transition color .13s ease-out
    transition-delay .07s

    &::before
      position absolute
      left -.15em
      z-index -1
      display block
      width 3px
      height 1em
      border-radius 1.5px 
      background black
      content ' '
      transition width .3s ease-out 
      pointer-events none

    &:hover
      color white !important

      &::before
        width 100%
       

@media (max-width: 600px)
  header>*
    display table
    margin 0 auto

  #logo
    padding 0

  #nav
    margin-top 1em

    a
      font-size 15px

h2
  margin 0
  padding 25px

  @media (max-width: 600px)
    padding 12.5px

  padding-top 100px

  @media (max-width: 600px)
    padding-top 300px

p
  display inline-flex
  margin 1em
  margin 0
  padding 1em

  @media (max-width: 600px)
    padding .5em

  width 1em
  height 1em
  text-align center
  font-size 25px
  line-height 1em
  cursor pointer
  transition background .1s ease-out

  &:active
    cursor copy

  &:hover
    border-radius .1em
    background blue

.container
  display block
  overflow hidden
  margin 0 auto
  margin-bottom -50px
  max-width 800px

  @media (max-width: 600px)
    margin-bottom -250px